<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textView"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Â¿Que tan satisfecho estas con el servicio?"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"/>

        <RatingBar
            android:id="@+id/puntaje"
            android:layout_width="244dp"
            android:layout_height="53dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_detalles"
            android:progressTint="@color/colorStars"/>

        <Button
            android:id="@+id/enviar_puntaje"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Enviar"
            android:background="@drawable/button_star"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>